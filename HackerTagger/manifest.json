{
    "update_url": "https://clients2.google.com/service/update2/crx",
    "manifest_version": 2,
    "name": "Hacker Tagger",
    "short_name": "HackTag",
    "description": "Allows you to tag users on Hacker News",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "http://news.ycombinator.com/*",
                "https://news.ycombinator.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css" : [
                "content.css"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "storage", //To save tags
        "tabs" //To refresh page when tags are changed
    ],
    "browser_action": {
        "default_icon": "icon16.png",
        "default_title": "Hacker Tagger",
        "default_popup": "popup.html"
    },
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    }
}